# Character Recognition Service 配置文件
# 复制此文件为 .env 并根据需要修改：cp .env.example .env

# ============ Redis 配置 ============
REDIS_URL=redis://localhost:6379/0

# ============ 缓存配置 ============
ENABLE_CACHE=True
CACHE_TTL=3600
CACHE_PREFIX=charrecog

# ============ 服务配置 ============
# API 监听地址
HOST=0.0.0.0
PORT=8001

# 调试模式
DEBUG=True
LOG_LEVEL=INFO

# ============ NER 模型配置 ============
NER_MODEL=hanlp.pretrained.ner.MSRA_NER_BERT_BASE_ZH
NER_BATCH_SIZE=32

# ============ 句向量模型配置 ============
EMBEDDING_MODEL=shibing624/text2vec-base-chinese
EMBEDDING_BATCH_SIZE=64
EMBEDDING_MAX_LENGTH=128

# ============ 别名合并配置 ============
SIMILARITY_THRESHOLD=0.80
MIN_ALIAS_SIMILARITY=0.75
MAX_ALIAS_SIMILARITY=0.95
