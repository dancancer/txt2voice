# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI with Bun
# to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# Database
DATABASE_URL="postgresql://user:password@host:5432/txt2voice"

# Redis
REDIS_URL="redis://host:6379"

# Next.js
NEXTAUTH_SECRET="your-secret-key-here-change-this"
NEXTAUTH_URL="http://localhost:3000"

# TTS Providers
AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="your-azure-region"

# File Storage
UPLOAD_DIR="./uploads"
AUDIO_DIR="./audio"

# Application Settings
NODE_ENV="development"
PORT=3000

# LLM Provider Configuration
LLM_PROVIDER="custom"
LLM_API_KEY="your-llm-api-key-here"
LLM_BASE_URL="https://api.deepseek.com"
LLM_MODEL="deepseek-chat"

# IndexTTS Configuration
INDEXTTS_API_URL="http://192.168.88.9:8001"
INDEXTTS_API_KEY=""
INDEXTTS_TIMEOUT="30000"
INDEXTTS_MAX_FILE_SIZE="104857600"

# Public IndexTTS URL (for client-side audio playback)
NEXT_PUBLIC_INDEXTTS_API_URL="http://192.168.88.9:8001"
