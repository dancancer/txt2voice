# Development Dockerfile for Next.js with hot reload support
FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy workspace configuration files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY apps/web/package.json ./apps/web/

# Install all dependencies (including dev dependencies)
RUN pnpm install --filter=web... --no-frozen-lockfile

# Copy source code (excluding node_modules which will be mounted via volumes)
COPY apps/web/src ./apps/web/src
COPY apps/web/public ./apps/web/public
COPY apps/web/prisma ./apps/web/prisma
COPY apps/web/next.config.dev.js ./apps/web/next.config.js
COPY apps/web/tsconfig.json ./apps/web/tsconfig.json
COPY apps/web/tailwind.config.ts ./apps/web/tailwind.config.ts
COPY apps/web/postcss.config.js ./apps/web/postcss.config.js

WORKDIR /app/apps/web

# Remove prisma.config.ts as it's not needed in Docker builds and causes dotenv dependency issues
RUN rm -f prisma.config.ts

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 3001

ENV PORT 3001
ENV HOSTNAME "0.0.0.0"
ENV NODE_ENV development
ENV NEXT_TELEMETRY_DISABLED 1

# Start Next.js in development mode with Webpack (not Turbopack) for better Docker compatibility
CMD ["pnpm", "next", "dev", "--hostname", "0.0.0.0", "-p", "3001"]
